{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "esnext",
        "jsx": "preserve",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "sourceMap": false,
        "lib": ["dom", "es5", "es2015.promise"],
        "paths": {
            "@app/*": ["./src/*"]
        }
    },
    "include": ["./src/*"]
}
